@import '~@/assets/css/abstracts/variables'

body
  margin-bottom: 65px
  color: $white
  font: $regular-font 'Open Sans', sans-serif
  background-color: $almost-black
  // overflow: scroll

p
  line-height: 19px

@media screen and (min-width: 961px)
  html
    height: 100%
    background-color: $black

    body
      width: 300px
      margin: auto
      border-radius: 15px

      #app
        padding-bottom: 2px
        background-color: $almost-black
        border-radius: 15px

        .bottom-player
          width: 300px
          left: 50%
          transform: translateX(-50%)

      img
        height: ((.94*400px) / (16/9)) !important

      .logo
        height: .80*400px !important
