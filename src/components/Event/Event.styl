@import '~@/assets/css/abstracts/variables'

img
  display: block
  width: 100%

.col
  padding: 0 20px

.headline
  font-weight: 600
  margin: 15px 0

  .date-start
    color: $spray
    font-size: 14px
    margin-bottom: 5px

  .title
    font-size: 16px

.callsToAction
  background-color: $alabaster
  color: $black
  display: grid
  font-size: 14px
  font-weight: 600
  grid-template-columns: 50 50
  grid-template-rows: 50px 50px 50px

  .disabled
    color: $alto

  i
    margin-right: 10px

  a, a:visited
    color: $black

  .share
    border-right: 1px solid $alto
    grid-column: 1 / 2
    grid-row: 1 / 2

    // .content
    //   display: inline-block
    //   width: 10px

  .star
    grid-column: 2 / 3
    grid-row: 1 / 2

  .address
    border-bottom: 1px solid $alto
    border-top: 1px solid $alto
    grid-column: 1 / 3
    grid-row: 2 / 3

    span
      font-size: 11px
      font-weight: 300
      margin-right: 15px

    .map
      background-image: url('~@/assets/images/map.png')
      background-position: center
      background-repeat: no-repeat
      background-size: cover
      box-shadow: 0 1px 6px rgba(0, 0, 0, .16), 0 2px 6px rgba(0, 0, 0, .23)
      height: 25px
      width: 65px

  .tickets
    border-right: 1px solid $alto
    display: block
    grid-row: 3 / 4

  .guestlist
    grid-row: 3 / 4

  .share, .star, .address, .tickets, .guestlist
    align-items: center
    display: flex
    padding-left: 20px
