@import '~@/assets/css/abstracts/variables'

img
  display: block
  height: (94vw / (16/9))
  object-fit: cover
  overflow: hidden
  width: 100%

.col
  padding: 0 20px

.headline
  font-weight: 600
  margin: 15px 0

  .date-start
    color: $spray
    font-size: 16px
    margin-bottom: 5px

  .title
    font-size: 18px

.callsToAction
  background-color: $alabaster
  color: $black
  font-size: 14px
  font-weight: 600

  .disabled
    color: $alto

  i
    margin-right: 10px

  a, a:visited
    color: $black

  .share, .star, .location, .tickets, .guestlist
    align-items: center
    box-sizing: border-box
    display: flex
    height: 50px
    padding: 0 20px

  .row1
    display: flex

    .share
      border-right: 1px solid $alto
      flex: 1

    .star
      flex: 1

  .location
    align-items: center
    border-bottom: 1px solid $alto
    border-top: 1px solid $alto
    box-sizing: border-box
    display: flex

    span
      font-size: 11px
      font-weight: 400
      margin-right: 15px

    .map
      background-image: url('~@/assets/images/map.png')
      background-position: center
      background-repeat: no-repeat
      background-size: cover
      box-shadow: 0 1px 6px rgba(0, 0, 0, .16), 0 2px 6px rgba(0, 0, 0, .23)
      height: 25px
      width: 65px

  .row3
    display: flex

    .tickets
      border-right: 1px solid $alto
      box-sizing: border-box
      flex-basis: 50%

    .guestlist
      flex-basis: 50%

