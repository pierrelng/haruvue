.wrapper
  margin-top: 15px

  .rubric
    display: block
    font-size: 12px
    font-weight: 700
    margin-bottom: 10px
    text-transform: uppercase

  .blue
    border-right: solid 5px $dodger-blue

  .red
    border-right: solid 5px $radical-red

  .tile
    align-items: center
    background-color: $cod-gray
    border-radius: 5px
    box-sizing: border-box
    color: $white
    display: flex
    padding: 15px 0
    width: 100%

    img
      border: solid 1px $white
      border-radius: 50%
      display: inline-block
      height: 40px
      margin: 0 10px
      width: 40px

    .container
      display: flex
      flex-direction: column

      .name
        font-size: 14px
        font-weight: 700

      .type
        list-style: square
        margin: 0
        padding: 0

        li
          display: inline-block
          font-size: 12px
          margin-right: 5px

          .bullet
            background-color: $white
            border-radius: 50%
            display: inline-block
            height: 4px
            margin-right: 5px
            vertical-align: middle
            width: 4px

.description

  .separator
    background-color: $white
    height: 2px
    width: 100%

  .content
    font-size: 15px
    position: relative

  .truncated
    height: 170px
    overflow: hidden

    .shadow
      background: linear-gradient(to bottom, rgba(16, 16, 16, 0), rgba(16, 16, 16, 1))
      bottom: 0
      height: 100px
      position: absolute
      width: 100%

.tags
  margin: 25px 0
  position: relative

  .rubric
    margin-bottom: 5px

  ul
    margin: 0 0 5px
    padding: 0
    display: flex
    flex-wrap: wrap

    li
      border: solid 1px $white
      border-radius: 25px
      display: block
      font: 12px 'Open Sans', sans-serif
      margin: 0 5px 5px 0
      padding: 0 6px 1px

  .coupdecoeur
    color: $radical-red

    .reasonWhy
      display: block
      font-size: 14px
      line-height: 19px
      margin-bottom: 7px

.links

  a
    background-color: $mine-shaft
    background-image: url('~@/assets/images/icons/facebook_white.png')
    background-position: center
    background-repeat: no-repeat
    background-size: 20px
    border-radius: 8px
    display: inline-block
    height: 50px
    width: 60px
