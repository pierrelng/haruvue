@import '~@/assets/css/abstracts/variables'

.bottom-nav
  position: fixed
  z-index: 9999
  bottom: 0
  left: 0
  display: none
  align-items: center
  width: 100%
  height: 45px
  background-color: $almost-black
  border-top: solid 1px $alabaster

.playPause
  display: flex
  align-items: center
  padding-left: 8px
  .icon
    font-size: $playPause-big
  .spinner
    padding-left: 6px

.rewind
  font-size: $playPause-medium
  padding-left: 10px

.fastForward
  font-size: $playPause-medium
  padding-left: 14px

.eventName,
.eventName:visited
  margin-left: 15px
  color: $white

.showBottomBar
  display: flex
