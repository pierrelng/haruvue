@import '~@/assets/css/abstracts/variables'

.bottom-player
  position: fixed
  z-index: 9999
  bottom: 0
  left: 0
  display: none
  align-items: center
  width: 100%
  height: 50px
  background-color: $almost-black
  border-top: solid 1px $alabaster

.playPause
  display: flex
  align-items: center
  padding-left: 16px
  .icon
    font-size: $playPause-big
  .spinner
    padding-left: 6px

.rewind
  font-size: $playPause-medium
  padding-left: 15px

.fastForward
  font-size: $playPause-medium
  padding-left: 20px

.eventName,
.eventName:visited
  margin-left: 20px
  color: $white
  font-size: $small-font

.showBottomBar
  display: flex
