@import '~@/assets/css/abstracts/variables'

img
  display: block
  height: (94vw / (16/9))
  object-fit: cover
  overflow: hidden
  width: 100%

.list
  list-style: none
  margin: 25px 0 0
  padding: 0

  li
    background-color: $cod-gray
    border-radius: 15px
    box-shadow: 0 3px 5px 1px $black
    margin: 0 3vw 30px
    overflow: hidden

    .infos
      padding: 10px

      span
        display: block

      i
        font-size: 15px
        margin-right: 2px
        vertical-align: -2px

      .title
        font-size: 17px
        font-weight: 600
        margin-bottom: 10px
        overflow: hidden
        text-overflow: ellipsis
        white-space: nowrap

      .date, .venue
        font-size: 15px

        span
          display: inline-block

        .date-start
          font-weight: 600

      .venue
        margin-top: 3px

      a
        color: $anakiwa
        float: right
        font-size: 15px
        margin: 8px 5px 10px
        text-decoration: underline

.spinner
  display: flex
  justify-content: center

a
  display: block
  text-decoration: none

.cover
  position: relative

.play
  align-items: center
  justify-content: center
  background-color: white
  border-radius: 90px
  bottom: 5vw
  box-shadow: 0 0 5px 1px $black
  color: $tundora
  display: flex
  height: 50px
  position: absolute
  right: 5vw
  width: 50px
