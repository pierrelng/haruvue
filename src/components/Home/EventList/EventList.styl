@import '~@/assets/css/abstracts/variables'

img
  display: block
  height: (94vw / (16/9))
  object-fit: cover
  overflow: hidden
  width: 100%

.list
  list-style: none
  margin: 25px 0 0
  padding: 0
  li
    position: relative
  .overflowww
    background-color: $cod-gray
    border-radius: 15px
    box-shadow: 0 3px 5px 1px $black
    margin: 0 10px 30px
    overflow: hidden
    .infos
      padding: 10px
      display: block
      span
        display: block
      i
        font-size: 15px
        margin-right: 2px
        vertical-align: -2px
      .title
        font-size: 17px
        font-weight: 600
        margin-bottom: 10px
        overflow: hidden
        text-overflow: ellipsis
        white-space: nowrap
      .date, .venue
        font-size: 15px
        span
          display: inline-block
        .date-start
          font-weight: 600
      .venue
        margin-top: 3px
    .tagsAndReason
      // padding: 0 10px 10px
      padding: 5px 0 10px
      .coupdecoeur
        align-items: center
        display: flex
        margin-top: 8px
        .reasonWhy
          color: $radical-red
          font-size: 13px
          line-height: 15px
          overflow: hidden
          text-overflow: ellipsis
          white-space: nowrap
          span
            display: inline-block
            font-weight: 700

.spinner
  display: flex
  justify-content: center

a
  color: $white
  display: block
  text-decoration: none
  &:hover
    color: $white

.cover
  position: relative

.enunmot
  position: absolute
  z-index: 2
  top: 15px
  left: 5px
  padding: 2px 12px
  font-size: $regular-font
  font-weight: 600
  text-transform: uppercase
  box-shadow: 0 5px 10px rgba(0, 0, 0, .19), 0 3px 3px rgba(0, 0, 0, .23)
  &.black
    background-color: $black
  &.green
    background-color: $rock-green
  &.pink
    background-color: $pop-pink
  &.blue
    background-color: $house-blue
  &.violet
    background-color: $techno-violet
  &.yellow
    background-color: $latin-yellow
  &.orange
    background-color: $hiphop-orange
  &.turquoise
    background-color: $jazz-turquoise
  &.red
    background-color: $electro-red

.noEventsFound
  opacity: .3
  font-style: italic
  font-weight: 600
  text-align: center

.reset,
.reset:visited
  background-color: $silver-chalice
  color: $black
  font-weight: 600
  width: 140px
  padding: 5px 0 6px
  border-radius: 25px
  text-align: center
  margin: 0 auto
  &:hover
    color: $black
